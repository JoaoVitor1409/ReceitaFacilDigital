<div class="modal fade" id="changePasswordModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title">Esqueceu sua senha?</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/enviarCodigo" method="POST">
                <div class="modal-body">
                    <div class="row justify-content-center inputs">
                        <div class="col-md-8 inputArea inputModal">
                            <div class="input-group">
                                <label for="email" class="input-group-text inputIcon emailIcon emailModalIcon">
                                    <span class="material-icons-outlined">badge</span>
                                </label>
                                <input type="text" name="email" class="form-control emailInput emailModalInput emailInputModal" id="email" placeholder="Digite seu E-mail" required>
                            </div>
                            <div class="errorDiv text-start d-none emailError emailModalError">
                                <p class="error text-danger emailErrorMsg emailModalErrorMsg"></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btnModal" id="btnChangePassword">Mudar minha senha</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="VerifyCodeModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title">C贸digo enviado!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
